{
  "hosting": {
    "public": "public/stylesheets",
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/node_modules/**",
      "**/.env/**"
    ]
  },
  "functions": [
    {
      "source": "./",
      "runtime": "nodejs16",
      "codebase": "default"
    },
    {
      "source": "functions",
      "codebase": "functions",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ]
}
