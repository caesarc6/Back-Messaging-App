{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      ".env**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app",
        "destination:": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "./",
    "runtime": "nodejs16"
  }
}
